# AIv4 Environment Configuration
# Copy this file to .env and fill in your values

# ================================
# Data Configuration
# ================================
DATA_PROJECT_ID=ignition-ki-csv-storage
DATA_GCS_BUCKET_NAME=ignition-ki-csv-data-2025-user123
DATA_USE_GCS=true
DATA_MIN_PRICE=0.05
DATA_MIN_YEARS_DATA=2.0
DATA_PRODUCTION_START_DATE=2000-01-01

# ================================
# Consolidation Criteria
# ================================
CONSOLIDATION_BBW_PERCENTILE_THRESHOLD=0.30
CONSOLIDATION_ADX_THRESHOLD=32.0
CONSOLIDATION_VOLUME_RATIO_THRESHOLD=0.35
CONSOLIDATION_RANGE_RATIO_THRESHOLD=0.65
CONSOLIDATION_QUALIFYING_DAYS=10
CONSOLIDATION_MAX_PATTERN_DAYS=90

# ================================
# Machine Learning
# ================================
ML_N_ESTIMATORS=100
ML_MAX_DEPTH=6
ML_LEARNING_RATE=0.1
ML_RANDOM_STATE=42
ML_MIN_SAMPLES_FOR_TRAINING=100
ML_TEST_SIZE=0.2

# ================================
# Deep Learning
# ================================
DL_ENABLED=true
DL_SEQUENCE_LENGTH=30
DL_LSTM_UNITS=128
DL_ATTENTION_HEADS=4
DL_DROPOUT_RATE=0.3
DL_EPOCHS=100
DL_BATCH_SIZE=32
DL_LEARNING_RATE=0.001
DL_EARLY_STOPPING_PATIENCE=15
DL_ENSEMBLE_XGB_WEIGHT=0.5
DL_ENSEMBLE_DL_WEIGHT=0.5

# ================================
# Regression Models
# ================================
REGRESSION_ENABLED=true
REGRESSION_XGBOOST_N_ESTIMATORS=100
REGRESSION_XGBOOST_MAX_DEPTH=6
REGRESSION_XGBOOST_LEARNING_RATE=0.1
REGRESSION_GAIN_CLIP_MAX=3.0

# ================================
# Outcome Classification
# ================================
OUTCOME_K4_THRESHOLD=0.75
OUTCOME_K3_THRESHOLD=0.35
OUTCOME_K2_THRESHOLD=0.15
OUTCOME_K1_THRESHOLD=0.05
OUTCOME_LOOKFORWARD_DAYS=100

# ================================
# Memory Optimization
# ================================
MEMORY_ENABLE_OPTIMIZATION=true
MEMORY_AGGRESSIVE_MODE=false
MEMORY_MEMORY_WARNING_THRESHOLD_PCT=80.0
MEMORY_USE_PARQUET_CACHE=true
MEMORY_PARQUET_COMPRESSION=snappy
MEMORY_BATCH_SIZE_TICKERS=10
MEMORY_XGB_TREE_METHOD=hist
MEMORY_XGB_MAX_BIN=256

# ================================
# Paths
# ================================
PATH_OUTPUT_DIR=output
PATH_MODELS_DIR=models
PATH_LOGS_DIR=logs

# ================================
# Global Settings
# ================================
DEBUG=false
LOG_LEVEL=INFO
